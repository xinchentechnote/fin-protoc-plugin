<idea-plugin>
    <id>com.xinchentechnote.packetdsl</id>
    <name>Packet DSL Support</name>
    <vendor email="283235702@qq.com">xinchen</vendor>
    <version>0.1.0</version>
    <description>A simple Hello World plugin</description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="HelloWorldAction"
                class="com.xinchentechnote.protoc.HelloWorldAction"
                text="Say Hello"
                description="Shows Hello World message">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- 文件类型 -->
        <fileType implementationClass="com.xinchentechnote.packetdsl.PacketDslFile" name=""/>
        <!-- ParserDefinition -->
        <lang.parserDefinition language="PacketDsl"
                               implementationClass="com.xinchentechnote.packetdsl.PacketDslParserDefinition"/>
    </extensions>
</idea-plugin>
